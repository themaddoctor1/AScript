
function byte sumn(byte n) {
    if(n == 0) {
        //If zero, then result is zero.
        return 0;
    } else if(n > 0){
        //Summation is based on recursive results
        return n + sumn(n-1);
    } else {
        //Handle negative case
        return sumn(-n);
    };
};

function void main() {
    byte x = sumn(3);
};

