byte[8] array;
array[0] = 1;
array[1] = 6;
array[2] = 4;
array[3] = 2;
array[4] = 5;
array[5] = 3;
array[6] = 8;
array[7] = 7;

byte i = 0;
byte j;
byte min;
byte indJ;
byte tmp;

while(i < 8) {

    j = i + 1;
    min = i;

    while(j < 8) {
        indJ = array[j];

        if(indJ < array[min]) {
            min = i;
        };

        j = j + 1;
    };

    tmp = array[i];
    array[i] = array[min];
    array[min] = tmp;

    i = i + 1;

};
